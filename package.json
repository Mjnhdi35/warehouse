{
  "name": "warehouse",
  "packageManager": "yarn@4.10.3",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "setup:yarn": "corepack enable && corepack prepare yarn@4.10.3 --activate && yarn install",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "tsc": "yarn nx run-many -t tsc",
    "lint": "yarn nx run-many -t lint",
    "build": "yarn nx run-many -t build"
  },
  "engines": {
    "node": "22.16.0",
    "yarn": "4.10.3"
  },
  "devDependencies": {
    "nx": "22.0.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
