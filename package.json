{
  "name": "warehouse",
  "packageManager": "yarn@4.10.3",
  "author": "smoothie",
  "repository": {
    "url": "https://github.com/Mjnhdi35/warehouse.git"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,vue}\"",
    "tsc": "yarn nx run-many -t tsc",
    "lint": "yarn nx run-many -t lint",
    "build": "yarn nx run-many -t build",
    "api:test:e2e": "yarn workspace @warehouse/api test:e2e",
    "valid": "yarn format && yarn tsc && yarn lint && yarn build",
    "shell": "chmod +x scripts/*.sh",
    "shell:check": "./scripts/systems/*.sh"
  },
  "engines": {
    "node": "22.16.0",
    "yarn": "4.10.3"
  },
  "devDependencies": {
    "nx": "22.0.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
